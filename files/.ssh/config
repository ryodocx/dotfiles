################################################################################
Include conf.d/*
################################################################################
Host *
    XAuthLocation /opt/X11/bin/xauth
    Controlmaster auto
    Controlpersist 300
    Controlpath  ~/.ssh/.ctl/%r-%h.%p
    ServerAliveInterval 120
    ServerAliveCountMax 10
    TCPKeepAlive yes
    IdentityFile ~/.ssh/id_rsa
################################################################################
